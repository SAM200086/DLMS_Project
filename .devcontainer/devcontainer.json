{
    "name": "DLMS Development",
    "image": "mcr.microsoft.com/vscode/devcontainers/python:3",
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-python.python",
        "github.copilot"
    ],
    "postCreateCommand": "pip install -r requirements.txt",
    "forwardPorts": [8000],
    "remoteUser": "vscode"
}
